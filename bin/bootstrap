#!/usr/bin/env bash

set -euo pipefail

pushd `dirname $0` > /dev/null
  cd ..

  zshrc_shim="source \"$(pwd)/.zshrc.local\""

  if ! grep -q "$zshrc_shim" ~/.zshrc; then
    echo "$zshrc_shim" >> ~/.zshrc
  fi

popd > /dev/null

echo "Done. You might need to source your .zshrc in this shell for it to take effect."
